<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="deal.with.it"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lmg_logo_320"
        android:label="@string/app_name"
        android:logo="@drawable/lmg_logo_320"
        android:theme="@style/AppTheme" >
        <activity android:name="deal.with.it.Welcome" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="deal.with.it.today" >
        </activity>
        <activity
            android:name="deal.with.it.TodayDisplay"
            android:label="@string/title_activity_today_display"
            android:parentActivityName="deal.with.it.today" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="deal.with.it.today" />
        </activity>
        <activity
            android:name="deal.with.it.RequestActivity"
            android:label="@string/title_activity_request" >
        </activity>
    </application>

</manifest>